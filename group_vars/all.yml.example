elk_version: '6.2.2'
timezone: 'Asia/Shanghai'

# Set 'true' when deploy on production.
check_groups: true

# Set the network interface name to get IP
## CentOS
RedHat_bind_interface: 'eth1'
## Ubuntu
Debian_bind_interface: 'enp0s8'

# DNS nameserver
dns_servers:
  - 127.0.0.1
  - 8.8.8.8

# Do NOT edit the following lines unless you know why.
elastic_http_port: '9200'
logstash_beats_port: '5044'
kibana_port: '5601'

# Elasticsearch configure
elastic_cluster_name: 'quanduan'
elastic_log_path: '/var/log/elasticsearch'
## IMPORTANT: for production, make sure the elasticsearch data paths are exists and not on the system disk.
##            And DO NOT remove them unless you know what you doing.
elastic_data_paths:
  - /var/lib/elasticsearch
elastic_plugins:
  - ingest-user-agent
  - ingest-geoip
# Start: Do NOT edit.
elastic_all_roles:
  - master
  - data
  - ingest
# End: Do NOT edit

# LogStash configure
logstash_data_path: '/var/lib/logstash'
logstash_log_path: '/var/log/logstash'
logstash_piplines:
  - 000-input
  - 001-logstash
  - 002-monit
  - 003-syslog
  - 004-auditd
  - 005-elasicsearch
  - 999-output
# Consul
consul_version: '1.0.7'
consul_dc_name: 'elk'

# Monit
monit_version: '5.25.1'
smtp_host: ''
smtp_user: ''
smtp_pass: ''
recipients:
  - {
    name: '李海滨',
    email: 'haibin.lee@foxmail.com'
  }

# global beats' modules list
global_filebeat_modules:
  - system
  - auditd
global_metricbeat_modules:
  - system
global_packetbeat_modules: ""

# Curator action tasks. Indices which older than the unit will move to warm data nodes.
hot_to_warm_unit: hours
hot_to_warm_unit_count: 12

# Redis
redis_version: 4.0.9
