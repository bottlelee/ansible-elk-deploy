elk_version: '6.4.0'
timezone: 'Asia/Shanghai'

# Set 'true' when deploy on production.
check_groups: true

# Which interface you want to bind?
# Leave the 'bind_interface' in blank will use the ansible facts default value
bind_interface: 'eth1'
bind_address: "{{ hostvars[inventory_hostname]['ansible_' + bind_interface]['ipv4']['address'] | default(ansible_default_ipv4.address) }}"
bind_network: "{{ hostvars[inventory_hostname]['ansible_' + bind_interface]['ipv4']['network'] | default(ansible_default_ipv4.network) }}"

# DNS nameserver
dns_servers:
  - 127.0.0.1
  - 8.8.8.8

# Do NOT edit the following lines unless you know why.
elastic_http_port: '9200'
logstash_beats_port: '5044'
kibana_port: '5601'

# LogStash configure
logstash_data_path: '/var/lib/logstash'
logstash_log_path: '/var/log/logstash'
logstash_piplines:
  - 000-input
  - 001-logstash
  - 002-monit
  - 003-syslog
  - 004-auditd
  - 005-elasicsearch
  - 999-output
# Consul
consul_version: '1.2.2'
consul_dc_name: 'elk'

# Monit
monit_version: '5.25.2'
smtp_host: ''
smtp_user: ''
smtp_pass: ''
recipients:
  - {
    name: '李海滨',
    email: 'haibin.lee@foxmail.com'
  }

# global beats' modules list
global_filebeat_modules:
  - system
  - auditd
global_metricbeat_modules:
  - system
global_packetbeat_modules: ""

# Curator action tasks. Indices which older than the unit will move to warm data nodes.
hot_to_warm_unit: hours
hot_to_warm_unit_count: 12

# Redis
redis_version: 4.0.9
