output {
  if [@metadata][beat] {
    elasticsearch {
      hosts => ["ingest.elastic.service.{{ consul_dc_name }}.consul:{{ elastic_http_port }}"]
      index => "%{[@metadata][beat]}-%{[@metadata][version]}-%{+YYYY.MM.dd}"
      manage_template => false
    }
  }
  else {
    elasticsearch {
      hosts => ["ingest.elastic.service.{{ consul_dc_name }}.consul:{{ elastic_http_port }}"]
      index => "logstash-%{+YYYY.MM.dd}"
    }
  }
}
